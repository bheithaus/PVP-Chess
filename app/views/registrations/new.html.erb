<div class="my-form span6">
	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true %></div>

	  <div><%= f.label :password, "Password: at least 8 characters" %><br />
	  <%= f.password_field :password %></div>

	  <div><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation %></div><br>

	  <div class="notice"><%= notice %></div>

	  <div class="well span4">
	  	<h1>
	    	<%= @obfuscated_word %>
	  	</h1>
	  </div>

	  <label>
	  	Please Enter the Secret Word to Confirm your Humanity
	  	<input name="guess" type="text" placeholder="enter secret here">
	  </label>

	  <div><%= f.submit "Sign up" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>